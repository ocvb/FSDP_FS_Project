{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@api/*": [
                "./src/api/*"
            ],
        },
        "allowJs": true, // Allows JavaScript files to be compiled.
        "checkJs": true, // Set to true if you want TypeScript to type-check your JS files.
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true, // Enables a wide range of type checking behavior for your project.
        "module": "esnext",
        "target": "es5", // Set according to your target environment
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "types/custom.types.ts"
    ]
}